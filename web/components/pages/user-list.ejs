<% let tdClassName="py-3 px-5", thClassName=`${tdClassName} font-bold` %>

<div class="flex flex-col gap-6">
    <div class="flex items-center justify-between">
        <h1 class="font-medium">Users</h1>

        <form action="<%= `${variables.routes.admin}${variables.routes.users}` %>" method="get" class="flex items-center gap-2">
            
            <%- include('../form/input', {placeholder: "Search users...", className: "!w-auto", name: "q"}) %>
            <%- include('../general/button', {text: "Search", buttonType: "primary"}) %>
            
        </form>
    </div>

    <table class="w-full">
        <thead class="w-full">
            <tr class="bg-primary-50">
                <th class="<%= thClassName %>">S / N</th>
                <th class="<%= thClassName %>">Name</th>
                <th class="<%= thClassName %>">Email</th>
                <th class="<%= thClassName %>">Phone number</th>
                <th class="<%= thClassName %>">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (users && Array.isArray(users)) { %>
                <% for (let index = 0; index < (max || users.length); index++) { %>
                  <% let data = users[index]; %>
                  <tr class="<%= index % 2 === 0 ? 'bg-primary-20' : '' %>">
                    <td class="<%= tdClassName %>"><%= (index + 1) %></td>
                    <td class="<%= tdClassName %>"><%= data?.name %></td>
                    <td class="<%= tdClassName %>"><%= data?.email %><% if(data.is_email_verified){ %><span class="px-3 py-1 pl-1 text-sm text-green-900 rounded-md"><i class="fa-solid fa-circle-check"></i></span><% } %></td>
                    <td class="<%= tdClassName %>"><%= data?.mobile_number %> <% if(data.is_phone_verified){ %><span class="px-3 py-1 pl-1 text-sm text-green-900 rounded-md"><i class="fa-solid fa-circle-check"></i></span><% } %></td>
                    <td>
                        
                    </td>
                </tr>
                <% } %>
              <% } %>
        </tbody>
    </table>
    <% if(!users || users && Array.isArray(users) && users.length < 1){ %>

        <div class="py-20 font-medium text-center text-slate-600">
            Sorry there is no users at the moment
        </div>

    <% } %>
    <div class=""></div>
</div>